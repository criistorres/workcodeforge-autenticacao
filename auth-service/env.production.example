# Production Environment Configuration
NODE_ENV=production
PORT=3000
CORS_ORIGIN=http://play.workadventure.localhost

# Database Configuration
SQLITE_DB_PATH=/app/data/auth.db
DATABASE_URL=sqlite:/app/data/auth.db

# JWT Configuration (MUST be set in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=30d

# OIDC Configuration
OIDC_ISSUER=http://auth.workadventure.localhost
OIDC_CLIENT_ID=workadventure-client
OIDC_CLIENT_SECRET=workadventure-secret-change-this-in-production

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379
REDIS_ENABLED=false

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PASSWORD=metrics123

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups
BACKUP_COMPRESSION_ENABLED=true

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/app/certs/cert.pem
SSL_KEY_PATH=/app/certs/key.pem

# Performance Configuration
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
REQUEST_TIMEOUT=30000

# Feature Flags
REGISTRATION_ENABLED=true
PASSWORD_RESET_ENABLED=true
EMAIL_VERIFICATION_ENABLED=false
TWO_FACTOR_ENABLED=false

# Email Configuration (if implemented)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@workadventure.localhost

# External Authentication (if implemented)
EXTERNAL_AUTH_ENABLED=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
